{
  "name": "tech-choise-web",
  "version": "1.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "svelte-kit dev --port 5000 --open",
    "build": "NODE_ENV=production rm -rf build .svelte-kit && svelte-kit build",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json --fail-on-warnings --fail-on-hints",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. .",
    "deploy": "yarn build && firebase deploy --only hosting"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@sveltejs/adapter-static": "^1.0.0-next.16",
    "@sveltejs/kit": "1.0.0-next.142",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "carbon-components-svelte": "^0.42.2",
    "carbon-icons-svelte": "^10.36.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "postcss": "^8.3.6",
    "postcss-load-config": "^3.1.0",
    "prettier": "~2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "svelte": "^3.38.3",
    "svelte-check": "^2.2.2",
    "svelte-preprocess": "^4.7.4",
    "tslib": "^2.3.0",
    "typescript": "^4.4.2"
  },
  "type": "module",
  "volta": {
    "node": "14.17.4",
    "yarn": "1.22.11"
  }
}
